<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRvPreviousBookingImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/ivRvPreviousBookingImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/img_demo_1"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/cvRvPreviousBookingImage"
        app:layout_constraintBottom_toBottomOf="@id/cvRvPreviousBookingImage"
        app:layout_constraintStart_toEndOf="@id/cvRvPreviousBookingImage"
        app:layout_constraintEnd_toEndOf="parent">



        <com.app.hubbdesign.custom.MyCustomTextView
            android:id="@+id/tvRvPreviousBookingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:text="Waterloo, London, UK"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/gill_sans_bold"/>

        <com.app.hubbdesign.custom.MyCustomTextView
            android:id="@+id/tvRvPreviousBookingDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Hubb for One, Unit ZVXYD"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/gill_sans_light" />

        <com.app.hubbdesign.custom.MyCustomTextView
            android:id="@+id/tvRvPreviousBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/gill_sans_light"
            android:text="Oct 14, 2021"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_3sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>