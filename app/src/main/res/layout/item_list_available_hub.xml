<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRvLocationAvailableHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.app.hubbdesign.custom.MyCustomTextView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:text="2"
            android:layout_gravity="center"
            android:textColor="@color/featuredLocation_blue"
            android:textSize="@dimen/_30sdp"
            app:setTypeFace="@string/nunitoSans_extra_bold" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llLocationAvailableHub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@id/cvRvLocationAvailableHub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvRvLocationAvailableHub"
        app:layout_constraintTop_toTopOf="@id/cvRvLocationAvailableHub">

        <com.app.hubbdesign.custom.MyCustomTextView
            android:id="@+id/tvRvLocationAvailableHubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hubb for One"
            android:textColor="#222222"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"
            android:fontFamily="@font/gill_sans_bold"/>

        <com.app.hubbdesign.custom.MyCustomTextView
            android:id="@+id/tvRvLocationAvailableHubDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Floor, Unit ZVXYD"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:maxLines="1"
            android:fontFamily="@font/gill_sans_bold"/>


    </LinearLayout>
    <com.app.hubbdesign.custom.MyCustomTextView
        android:id="@+id/tvRvLocationAvailableHubHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="Â£45 / Hour"
        android:textColor="@color/featuredLocation_blue"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/_15sdp"
        android:fontFamily="@font/gill_sans"
        app:layout_constraintTop_toTopOf="@id/llLocationAvailableHub"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>